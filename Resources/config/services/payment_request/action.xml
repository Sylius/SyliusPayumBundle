<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <defaults public="true" />

        <service id="sylius.payum.payment_request.action.get_http_request" class="Sylius\Bundle\PayumBundle\PaymentRequest\Action\SyliusGetHttpRequestAction">
            <argument type="service" id="sylius.payum.payment_request.context.payment_request" />

            <tag name="payum.action" all="true" prepend="true" />
        </service>

        <service id="sylius.payum.payment_request.action.render_template" class="Sylius\Bundle\PayumBundle\PaymentRequest\Action\SyliusRenderTemplateAction">
            <argument type="service" id="sylius.payum.payment_request.context.payment_request" />

            <tag name="payum.action" all="true" prepend="true" />
        </service>
    </services>
</container>
